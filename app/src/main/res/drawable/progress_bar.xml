<?xml version="1.0" encoding="utf-8"?>
      <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
      <item android:id="@android:id/background">
        <shape>
          <corners android:radius="5dip" />
          <gradient
              android:startColor="#69A0C6"
              android:endColor="#446F8D"
              android:angle="270"/>
        </shape>
      </item>
      <item android:id="@android:id/secondaryProgress">
        <clip>
          <shape>
            <corners android:radius="5dip" />
            <gradient
              android:startColor="#007399"
              android:endColor="#007399"
              android:angle="270" />
          </shape>
        </clip>
     </item>
      <item android:id="@android:id/progress">
        <clip>
          <shape>
            <corners
              android:radius="5dip" />
            <gradient
              android:startColor="#00ace6"
              android:endColor="#00ace6"
            android:angle="270" />
        </shape>
        </clip>
     </item>
     </layer-list>